<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALL LAB PRM"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#1976D2"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tiêu đề danh sách lab -->
    <TextView
        android:id="@+id/tvLabListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách LAB:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LAB 1 -->
    <TextView
        android:id="@+id/tvLab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📌 LAB 1"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="start"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabListTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LAB 2 -->
    <TextView
        android:id="@+id/tvLab2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📌 LAB 2"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvLab1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LAB 3 -->
    <TextView
        android:id="@+id/tvLab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📌 LAB 3"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvLab2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LAB 4 -->
    <TextView
        android:id="@+id/tvLab4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📌 LAB 4"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvLab3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LAB 5 -->
    <TextView
        android:id="@+id/tvLab5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📌 LAB 5"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvLab4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
