<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <!-- Hình ảnh món ăn -->
    <ImageView
        android:id="@+id/imageviewFood"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp" />

    <!-- Tên món ăn -->
    <TextView
        android:id="@+id/textviewFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageviewFood"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:text="Tên món ăn" />

    <!-- Mô tả món ăn -->
    <TextView
        android:id="@+id/textviewFoodDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewFoodName"
        android:layout_toEndOf="@id/imageviewFood"
        android:textSize="18sp"
        android:text="Mô tả món ăn" />

    <!-- Giá món ăn -->
    <TextView
        android:id="@+id/textviewFoodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewFoodDescription"
        android:layout_toEndOf="@id/imageviewFood"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Giá: 30,000 VND"
        android:layout_marginTop="5dp" />

    <!-- Nút giảm số lượng -->

    <!-- Nút tăng số lượng -->

    <!-- Số lượng món ăn -->

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_below="@id/textviewFoodPrice"
        android:layout_alignParentStart="true"
        android:layout_marginStart="251dp"
        android:layout_marginTop="-2dp"
        android:text="-" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_below="@id/textviewFoodPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="5dp"
        android:text="+" />

    <TextView
        android:id="@+id/textviewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMinus"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="9dp"
        android:layout_toStartOf="@+id/btnPlus"
        android:layout_toEndOf="@+id/btnMinus"
        android:text="0"
        android:textSize="18sp" />

</RelativeLayout>
