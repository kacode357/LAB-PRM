<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Question1Lab3Activity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitleQuestion1Lab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#1976D2"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút quay lại -->
    <Button
        android:id="@+id/btnBackQuestion1Lab3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_button"
        android:gravity="center_horizontal"
        android:text="⬅"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleQuestion1Lab3" />

    <!-- Ô nhập môn học -->
    <EditText
        android:id="@+id/etMonHoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#6200EE"
        android:hint="Nhập môn học"
        android:minHeight="48dp"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleQuestion1Lab3" />

    <!-- Nút Thêm -->
    <Button
        android:id="@+id/btnThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THÊM"
        android:backgroundTint="#D6D6D6"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etMonHoc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Nút Cập Nhật -->
    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CẬP NHẬT"
        android:backgroundTint="#D6D6D6"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/etMonHoc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Danh sách môn học -->
    <ListView
        android:id="@+id/ListViewMonHoc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:dividerHeight="1dp"
        android:divider="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/btnThem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
