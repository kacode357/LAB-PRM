<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Lab3Activity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitleLab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LAB 3"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#1976D2"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút quay lại -->
    <Button
        android:id="@+id/btnBackLab3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_button"
        android:gravity="center_horizontal"
        android:text="⬅"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleLab3" />

    <!-- Danh sách Questions -->
    <TextView
        android:id="@+id/tvQuestionsTitleLab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách câu hỏi:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvTitleLab3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp" />

    <!-- Q1 -->
    <TextView
        android:id="@+id/tvQuestion1Lab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📌 Question 1"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="start"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionsTitleLab3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Q2 -->
    <TextView
        android:id="@+id/tvQuestion2Lab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📌 Question 2"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion1Lab3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

<!-- Q3 -->
    <TextView
        android:id="@+id/tvQuestion3Lab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📌 Question 3"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion2Lab3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
