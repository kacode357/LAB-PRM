<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitleExtraExercise2Lab4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài tập làm thêm số 2 - Lab 4"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#1976D2"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút quay lại -->
    <Button
        android:id="@+id/btnBackExtraExercise2Lab4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_button"
        android:gravity="center_horizontal"
        android:text="⬅"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleExtraExercise2Lab4" />

    <!-- Nút gửi số -->
    <Button
        android:id="@+id/btnSendNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi Số"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleExtraExercise2Lab4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSendString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi Chuỗi"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnSendNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSendArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gửi mảng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSendString" />

    <Button
        android:id="@+id/btnSendStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gửi đối tượng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSendArray" />
    <Button
        android:id="@+id/btnSendBundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi Bundle"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnSendStudent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
